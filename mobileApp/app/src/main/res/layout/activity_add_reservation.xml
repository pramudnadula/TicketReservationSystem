    <EditText
        android:id="@+id/noOfTickets"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter No of tickets"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/selectDateButton"
        app:layout_constraintTop_toBottomOf="@+id/selectDateButton" />

    <EditText
        android:id="@+id/startFrom"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter Start Location"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/noOfTickets"
        app:layout_constraintTop_toBottomOf="@+id/noOfTickets" />

    <EditText
        android:id="@+id/endFrom"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter End Location"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/startFrom"
        app:layout_constraintTop_toBottomOf="@+id/startFrom" />

    <Spinner
        android:id="@+id/trainClass"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/endFrom"
        app:layout_constraintTop_toBottomOf="@+id/endFrom" />

    <Button
        android:id="@+id/setBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        android:text="Set Reservation"
        app:layout_constraintStart_toStartOf="@+id/trainClass"
        app:layout_constraintTop_toBottomOf="@+id/trainClass" />


</androidx.constraintlayout.widget.ConstraintLayout>